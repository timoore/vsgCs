{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "vsgcs",
  "version": "0.9.0",
  "$comment": "proj is added by CMakeLists.txt if VSGCS_USE_PROJ is true",
  "default-features": [
    "cesium-native-port"
  ],
  "features": {
    "cesium-native-port": {
      "description": "Use vckpg overlay for Cesium Native",
      "dependencies": [
        {
          "name": "cesium-native"
        }
      ]
    },
    "cesium-native-local": {
      "description": "Use local source for Cesium Native",
      "dependencies": [
        {
          "name": "cesium-native",
          "features": ["dependencies-only"]
        }
      ]
    },
    "proj": {
      "description": "Include Proj library for geodetic conversions",
      "dependencies": [
        "proj"
      ]
    }
  },
  "dependencies": [
    "vcpkg-cmake",
    "vcpkg-cmake-config",
    "cesium-native",
    "curl",
    {
      "name": "imgui",
      "features": [
        "vulkan-binding"
      ]
    },
    "spdlog",
    "tinyxml2",
    "vsg",
    {
      "name": "vsgxchange",
      "features": [
        "assimp"
      ]
    },
    "vsgimgui"
  ]
}

